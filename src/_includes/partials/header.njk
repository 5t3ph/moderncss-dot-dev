{%- if layout != 'layouts/social-template' %}{% include "partials/nav.njk" %}{% endif %}
{%- set dateLabel %}{{ "Updated on" if updatedOn else "Posted on" }}{% endset -%}
{%- set dateValue %}{{ updatedOn | postDate if updatedOn else page.date | postDate }}{% endset -%}

<header class="hero">
  <div class="container">
    <h1 class="color-primary">{{ title }}</h1>
    {% if not landingPage %}
    <p class="lead">
    {%- if layout == 'layouts/post' or layout == 'layouts/social-template' %}<span><span class="postdate">{{ dateLabel }}</em>: {{ dateValue }}</span>{% endif -%}
    <small class="row">
      <span class="byline">Written by Stephanie Eckles</span> {%- if layout != 'layouts/social-template' %}<a href="https://twitter.com/5t3ph/" class="button button-icon" aria-label="Twitter">
      {% icon "twitter" %}</a>{% endif %}
      {%- if layout == 'layouts/social-template' %}<strong class="color-secondary">ModernCSS.dev</strong>{% endif %}
    </small>
    </span></p>
    {% endif %}
  </div>
</header>